
@{
    ViewData["Title"] = "WO";
}

<h1>WO</h1>
<div class="col-md-8">
    <div class="row">
        <div class="table-responsive table-he-180">
            <table id="SalesOrders1" class="table table-sm table-bordered w-100 text-center">
                <thead class="  table-info th-sti">
                    <tr class="table-border-bottom">
                        <th>Sales Order #</th>
                        <th>Customer</th>
                        <th>PO No</th>
                        <th>Part No</th>
                        <th>Total SO QTY</th>
                        <th>Balance SO QTY</th>
                        <th>QTY on Hand</th>
                        <th>SO plan Date</th>
                        <th width="2%"></th>
                    </tr>
                </thead>
                <tbody>
                    <!--SalesOrderRow(s)-->
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    <div style="display:inline-block">
        <button id="btnAG" class="btn btn-sm btn-primary">Auto Genarate</button>
    </div>

    <div style="display:inline-block">
        <button id="btnGen" class="btn btn-sm btn-primary">Generate WO</button>
    </div>
</div>


<div class="col-md-8">
    <div class="row">
        <div class="table-responsive table-he-180">
            <table id="WorkOrder" class="table table-sm table-bordered w-100 text-center">
                <thead class="  table-info th-sti">
                    <tr class="table-border-bottom">
                        <th>Work Order #</th>
                        <th>Build To Stock</th>
                        <th>Part No</th>
                        <th>W/O Qnty</th>
                        <th>W/O Date</th>
                        <th>W/O Compl Date</th>
                        <th>Status</th>
                        <th>Urgent</th>
                        <th width="2%"></th>
                    </tr>
                </thead>
                <tbody>
                    <!--SalesOrderRow(s)-->
                </tbody>
            </table>
        </div>
    </div>
</div>

<template id="SalesOrderRow1">
    <tr>
        <td hidden>{salesOrderId}</td>
        <td hidden>{customerOrderId}</td>
        <td hidden>{partId}</td>
        <td>{soNumber}</td>
        <td>{customer}</td>
        <td>--</td>
        <td>{partNo}</td>
        <td>{requiredQuantity}</td>
        <td>{balanceSOQty}</td>
        <td>qty on hand</td>
        <td>{requiredByDateStr}</td>
        <td hidden>{requiredByDate}</td>
        <td>
            <input type="checkbox" />
        </td>
    </tr>
</template>

<template id="WorkOrderRow">
    <tr>
        <td hidden>{woid}</td>
        <td hidden>{salesOrderId}</td>
        <td hidden>{partId}</td>
        <td>{woNumber}</td>
        <td>--</td>
        <td>{partNo}</td>
        <td>{calcWOQty}</td>
        <td>{woDateStr}</td>
        <td>{planCompletionDateStr}</td>
        <td>Status</td>
        <td>
            <input type="checkbox" />
        </td>
        <td>
            <div class="dropdown float-center">
                <a href="#" class="dropdown-toggle arrow-none card-drop"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="mdi mdi-dots-vertical"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-end">
                    <!-- item-->
                    <a href="javascript:void(0);" class="dropdown-item">Edit</a>
                    <a href="javascript:void(0);" class="dropdown-item">Delete</a>
                    @*<a href="javascript:void(0);" class="dropdown-item"
                        data- ={customerOrderId}
                        data-salesorderid={salesOrderId}
                        data-scheduleid={scheduleId}
                        data-requiredbydatestr='{requiredByDateStr}'
                        data-requiredquantity={requiredQuantity}
                        data-comment='{comment}'
                        data-partid={partId}
                        data-salesorder="Y"
                        data-bs-toggle="modal"
                        data-bs-target="#Edit-SalesOrder">Edit</a>*@
                </div>
            </div>
        </td>
    </tr>
</template>

@section Scripts {
    <script src="~/js/businessaquisition/wo.js"></script>
}