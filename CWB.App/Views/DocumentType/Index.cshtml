                <form method="post" onsubmit="return false;" id="DocTypeForm">
                    <div class="row">
                        <label class="form-label col-md-4 mb-2">Document Type Name <span class="text-danger">*</span></label>
                        <div class="col-md-8 mb-2">
                            <input class="form-control form-control-sm" type="text" asp-for="Name" id="Name" placeholder="ENter Here" required>
                        </div>
                        <!-- ---------- -->
                        <label class="form-label col-md-4 mb-2">Document Type Description <span class="text-danger">*</span></label>
                        <div class="col-md-8 mb-2">
