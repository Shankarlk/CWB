                        <button class="btn btn-sm btn-primary" onclick="SetOp('add');$('#document-type-details').modal('show');" data-bs-toggle="modal">Add Document Type</button>
                    </div>
                </div>
                <!-- -------------  -->
            </div>
        </div>
    </div>
    <!-- end Container -->
</div>
