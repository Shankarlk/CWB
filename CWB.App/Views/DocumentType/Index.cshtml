@model CWB.App.Models.CoSettings.DocumentTypeVM;
<div class="content">
    <div class="card">
        <div class="card-body">
            <h5 class="pb-1 mb-2 mt-1">Document Type Overview</h5>
            <div class="row">
                <label class="form-label col-md-2 mb-2">Document</label>
                <div class="col-md-3 mb-2">
                    <input class="form-control form-control-sm" type="text" id="doctypename" name="text">
                </div>
                <!-- ----- -->
                <div class="col-md-1">
                </div>
                <!-- ----- -->
                <div class="col-md-12 mt-1">
                    <div class="table-responsive mb-2 table-he-180">
                        <table id="DocumentTypeTable" class="table table-sm table-bordered w-50 mb-3 text-center">
                            <thead class="  table-info th-sti">
                                <tr class="table-border-bottom">
                                    <th>Document Type Name</th>
                                    <th>Document Type Description</th>
                                    <th>Extension</th>
                                    <th width="5%"></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
