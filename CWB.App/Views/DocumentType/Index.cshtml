                        </div>
                        <!-- ---------- -->
                    </div>
                    <!-- ---------- -->
                    <div class="row display-none">
                        <div class="col-md-12 mb-2">
                            <label class="form-check-label" for="gp-12a">Document Uploaded by user</label>
                            <input class="form-check-input mt-1 m-l-15" type="checkbox" asp-for="IsUploadedByUser" name="IsUploadedByUser">
