            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts {
    <script src="/js/doctype.js"></script>
}

<template id="DocumentTypeTemplate">
    <tr>
        <td>{name}</td>
        <td>{description}</td>
        <td>{extension}</td>
        <td>
            <div class="dropdown float-center">
                <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></a>
                <div class="dropdown-menu dropdown-menu-end">
                    <!-- item-->
                    <a href="javascript:void(0);" onclick="SetOp('edit')" 
                       data-name="{name}" data-doctypeid="{documentTypeId}"
                       data-description="{description}" data-extension="{extension}"
                       data-isUploadedByUser="{isUploadedByUser}"                       
                        data-bs-toggle="modal" 
                        data-bs-target="#document-type-details" 
                        class="dropdown-item">Edit</a>
                    <!-- item-->
                    <a href="javascript:void(0);" onclick="DelDocType('{name}',{documentTypeId});" class="dropdown-item">Delete</a>
                </div>
            </div>
        </td>
</template>
