<div id="po-log" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-full-width">
        <div class="modal-content bxs-modal">
            <div class="modal-header">
                <h4 class="modal-title" id="fullWidthModalLabel">PO Log</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-2">
                        <h6>PO NO : </h6>
                    </div>
                    <!-- -----------------  -->
                    <div class="col-md-10">
                        <h6>PO Date : </h6>
                    </div>
                    <!-- -----------------  -->
                    <div class="col-md-2 mb-2">
                        <label class="form-label">From</label>
                        <input class="form-control form-control-sm" type="date" title="" data-plugin="tippy"
                               data-tippy-placement="top">
                    </div>
                    <!-- -----------------  -->
                    <div class="col-md-2 mb-2">
                        <label class="form-label">To</label>
                        <input class="form-control form-control-sm" type="date" title="" data-plugin="tippy"
                               data-tippy-placement="top">
                    </div>
                    <!-- -----------------  -->
                    <div class="col-md-2 mb-2">
                        <label class="form-label">Part No</label>
                        <select class="form-select form-select-sm" aria-label="form-select-sm" title=""
                                data-plugin="tippy" data-tippy-placement="top">
                            <option value="">==========</option>
                        </select>
                    </div>
                    <!-- -----------------  -->
                    <div class="col-md-2 mb-2">
                        <label class="form-label">Event</label>
                        <select class="form-select form-select-sm" aria-label="form-select-sm" title=""
                                data-plugin="tippy" data-tippy-placement="top">
                            <option value="">==========</option>
                        </select>
                    </div>
                    <!-- -----------------  -->
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Comments</label>
                        <textarea class="form-control form-control-sm" placeholder="Enter Comments"></textarea>
                    </div>
                    <!-- -----------------  -->
                    <!-- -----------------  -->
                    <!-- ======================== -->
                </div>
                <!-- =========== -->
                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="table-responsive table-he-150">
                                <table id="POLogTable" class="table table-sm table-bordered w-100 text-center">
                                    <thead class="  table-info th-sti">
                                        <tr class="table-border-bottom">
                                            <th>Date/Time</th>
                                            <th>User</th>
                                            <th>Part Number</th>
                                            <th>Event</th>
                                            <th>Sales Order #</th>
                                            <th>Field</th>
                                            <th>New Value</th>
                                            <th>Old Value</th>
                                            <th>Comment</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- -------------  -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- =========== -->
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<template id="PORow">
    <tr>
        <td>{poDateStr}</td>
        <td>{user}</td>
        <td>{partNo}</td>
        <td>{event}</td>
        <td>{soNumber}</td>
        <td>{field}</td>
        <td>{newValue}</td>
        <td>{oldValue}</td>
        <td>{comment}</td>
    </tr>
</template>